{ //gereksiz hataların görünmesini engeller
  "css.validate": false,
  "scss.validate": false,
  "less.validate": false,
  "editor.quickSuggestions": { //otomatik öneriler
    "strings": true
  },
  "tailwindCSS.includeLanguages": { //tailwind için dil desteği
    "plaintext": "html",
    "javascript": "javascript",
    "css": "css"
  },
  "tailwindCSS.experimental.classRegex": [ //özel formatlar için regex
    ["className\\s*=\\s*[\"']([^\"']*)[\"']", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ],
  "css.customData": [".vscode/css-data.json"] //tw direktifleri için daha iyi dökümantasyon destekler
} 